<!DOCTYPE html>
<html>
    <%- include('partials/header'); -%>
    <script src='/assets/jquery.js'></script>

    <!-------------------------------------------------------- Table ------------------------------------------->

    <section>
        <!--for demo wrap-->
        <div class='tableHeader'>Post Results</div>
        <div class="tbl-header">
          <table cellpadding="0" cellspacing="0" border="0">
            <thead>
              <tr>
                    <th>Post</th>
                    <th colspan="3" class="tableTextCenter">Operations</th>
              </tr>
            </thead>
          </table>
        </div>
        <div class="tbl-content">
          <table cellpadding="0" cellspacing="0" border="0">
            <tbody>
                <% for(var i=0; i<posts.length; i++) { %>
                    <tr>
                <td> <%= posts[i].title %><img class="icon" src="/assets/Images/stamp.png"></td>
                <td><a href="read_post.html">View</a><img class="icon" src="/assets/Images/eye.png"></td>
                <td><a href="update_post.html">Edit</a><img class="icon" src="/assets/Images/register.png"></td>
                <td><a href="#" id="deletePost">Delete</a><img class="icon" src="/assets/Images/minus.png"></td>
                <td>Enable/Disable<img class="icon" src="/assets/Images/switch-off.png"></td>
                    </tr>
                <% }; %>
            </tbody>
          </table>
        </div>
      </section>
</body>

</html>